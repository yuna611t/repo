@model List<MyFirstApp.Models.Movie>
@using MyFirstApp.Code.Helper;

@* @MovieHelper.DisplayMovies(Model) *@
    
    <div>
    @foreach(var movie in Model) {
        <ul class="list-group">
            <li class="list-group-item">@movie.ID</li>
            <li class="list-group-item">@movie.Title</li>
            <li class="list-group-item">@movie.ReleaseDate</li>
            <li class="list-group-item">@movie.Genre</li>
            <li class="list-group-item">@movie.Price</li>
        </ul>
    }
    </div>
